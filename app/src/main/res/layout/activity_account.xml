<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="1080px"
    android:layout_height="1920px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.godsendapp.www.godsend.AccountActivity"
    android:background="@drawable/background_image"
    android:layout_gravity="center">

    <Button
        android:text="Messages"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/item_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/message_button"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:gravity="bottom|center"/>

    <Button
        android:text="Items"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginBottom="204dp"
        android:id="@+id/item_button"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/message_button"
        android:layout_toStartOf="@+id/message_button" />

    <Button
        android:text="Balance"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:id="@+id/balance_button"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:gravity="bottom|center"
        android:layout_alignBottom="@+id/message_button"
        android:layout_toRightOf="@+id/message_button"
        android:layout_toEndOf="@+id/message_button"
        android:layout_alignTop="@+id/message_button" />

    <ImageView
        android:src="@drawable/item_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/item_button"
        android:layout_alignLeft="@+id/item_button"
        android:layout_alignStart="@+id/item_button"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:id="@+id/item_image"
        android:background="@null"/>

    <ImageView
        android:src="@drawable/message_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/message_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/message_image"
        android:background="@null"/>

    <ImageView
        android:src="@drawable/balance_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/balance_image"
        android:background="@null"
        android:layout_alignTop="@+id/balance_button"
        android:layout_toRightOf="@+id/message_button"
        android:layout_toEndOf="@+id/message_button"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="210dp"
        android:id="@+id/settings_button"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/message_button"
        android:layout_alignRight="@+id/balance_button"
        android:layout_alignEnd="@+id/balance_button"
        android:layout_height="60dp" />

    <ImageView
        android:src="@drawable/settings_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/settings_button"
        android:layout_alignLeft="@+id/balance_image"
        android:layout_alignStart="@+id/balance_image"
        android:layout_alignBottom="@+id/settings_button" />

    <Button
        android:text="HOME                    "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_button"
        android:layout_alignLeft="@+id/item_button"
        android:layout_alignStart="@+id/item_button"
        android:id="@+id/home_button"
        android:layout_alignBottom="@+id/settings_button"
        android:layout_toLeftOf="@+id/settings_button"
        android:layout_toStartOf="@+id/settings_button"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:gravity="right|center_vertical"/>

    <ImageView
        android:src="@drawable/home_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/home_image"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/home_button"
        android:layout_alignLeft="@+id/item_image"
        android:layout_alignStart="@+id/item_image"
        android:layout_alignBottom="@+id/home_button" />

    <TextView
        android:text="Search..."
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:id="@+id/textView_search"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@+id/home_button"
        android:layout_alignLeft="@+id/home_button"
        android:layout_alignStart="@+id/home_button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/settings_button"
        android:id="@+id/button3"
        android:layout_alignRight="@+id/settings_button"
        android:layout_alignEnd="@+id/settings_button"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal|bold"
        android:textSize="26sp"
        android:gravity="right|center" />

    <ImageView
        android:src="@drawable/add_new_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView5"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/home_button"
        android:layout_below="@+id/settings_button"
        android:layout_toRightOf="@+id/home_button" />

    <ImageView
        android:src="@drawable/add_new_text"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView6"
        android:scaleType="fitCenter"
        android:layout_marginTop="47dp"
        android:layout_alignTop="@+id/settings_button"
        android:layout_alignRight="@+id/settings_button"
        android:layout_alignEnd="@+id/settings_button" />


</RelativeLayout>
